@using MyPortfolio.DAL.Entities
@model List<Feature>

@foreach (var item in Model)
{
    <section id="home" class="s-home page-hero target-section" data-parallax="scroll" 
             data-image-src="@item.ImageUrl" 
             data-natural-width=3000 data-natural-height=2000 data-position-y=center>

        <div class="overlay"></div>
        <div class="shadow-overlay"></div>

        <div class="home-content">
            <div class="row home-content__main">

                <h3>
                    @item.Title
                </h3>

                <h1>
                    @item.Description
                </h1>

                <div class="home-content__buttons">
                    <a href="#works" class="smoothscroll btn btn--stroke">
                        Son Projelerim
                    </a>
                    <a href="#about" class="smoothscroll btn btn--stroke">
                        Hakkımda
                    </a>
                </div>

                <div class="home-content__scroll">
                    <a href="#about" class="scroll-link smoothscroll">
                        <span>Aşağı İn</span>
                    </a>
                </div>

            </div>
        </div> 

        <ul class="home-social">
            <li><a href="#"><i class="im im-facebook" aria-hidden="true"></i><span>Facebook</span></a></li>
            <li><a href="#"><i class="im im-twitter" aria-hidden="true"></i><span>Twitter</span></a></li>
            <li><a href="#"><i class="im im-instagram" aria-hidden="true"></i><span>Instagram</span></a></li>
            <li><a href="#"><i class="im im-behance" aria-hidden="true"></i><span>Behance</span></a></li>
            <li><a href="#"><i class="im im-linkedin" aria-hidden="true"></i><span>LinkedIn</span></a></li>
        </ul> 

    </section> 
}